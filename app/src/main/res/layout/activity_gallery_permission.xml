<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dslul.openboard.translator.pro.GalleryPermissionActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/padding">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/fab_padding"
            android:layout_marginTop="@dimen/extra_padding"
            android:layout_marginBottom="@dimen/fab_padding"
            android:padding="@dimen/padding"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/m_padding"
            android:layout_marginTop="@dimen/extra_padding"
            android:layout_marginBottom="@dimen/fab_padding"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="@dimen/padding"
            android:text="Gallery Permission"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_padding"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/padding"
        android:text="Gallery"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/llTopBar"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_175sdp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:src="@drawable/img_gallery_permission"/>

    <TextView
        android:id="@+id/btnAllow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMain"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/accent"
        android:text="Allow Access"
        android:paddingVertical="@dimen/fab_padding"
        android:paddingHorizontal="@dimen/extra_padding"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:layout_margin="@dimen/extra_padding"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnAllow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Keyboard Translator Pro will be able to access and
make changes to your gallery."
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/extra_padding"
        android:layout_marginTop="@dimen/fab_padding"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/gray_7070"/>


</androidx.constraintlayout.widget.ConstraintLayout>