<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llConversationLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/bg_conversation_left"
        android:layout_margin="@dimen/padding_10"
        android:layout_marginEnd="@dimen/fab_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="@dimen/padding_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCLText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/less_padding"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textViewCLTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawablePadding="@dimen/padding_10"
            app:drawableEndCompat="@drawable/ic_speak_ic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConversationRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:layout_margin="@dimen/padding_10"
        android:elevation="@dimen/padding_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/fab_padding"
        android:background="@drawable/bg_conversation_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCRText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/less_padding"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textViewCRTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawablePadding="@dimen/padding_10"
            app:drawableEndCompat="@drawable/ic_speak_ic" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>