<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="org.dslul.openboard.translator.pro.TranslateActivity">


    <LinearLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/padding"
            android:background="@drawable/bg_nothing_rounded_ripple"
            android:contentDescription="@string/todo"
            android:padding="@dimen/less_padding"
            android:scaleType="fitCenter"
            android:transitionName="anim_btn_menu"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLanguages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:transitionName="anim_cl_languages">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llLanguageFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_padding"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivSwitchLanguages"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvLanguageFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_regular"
                    android:padding="@dimen/padding"
                    android:text="@string/english"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_arrow_down" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/ivSwitchLanguages"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_margin="@dimen/fab_padding"
                android:background="@drawable/bg_btn_switch_languages"
                android:padding="@dimen/less_padding"
                android:paddingVertical="@dimen/_3sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_switch_languages"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llLanguageTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fab_padding"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivSwitchLanguages"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_arrow_down" />

                <TextView
                    android:id="@+id/tvLanguageTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_regular"
                    android:padding="@dimen/padding"
                    android:text="@string/english"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/padding"
            android:background="@drawable/bg_nothing_rounded_ripple"
            android:padding="6dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_access_time_filled_24"
            app:tint="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/llTopBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llTopBar">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/fab_padding"
            app:layout_behavior="com.example.translatorguru.classes.OverScrollBounceBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llPBTranslateFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/padding_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="@color/accent" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/translating"
                        android:textColor="@color/accent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/llText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_main_less_rounded"
                        android:backgroundTint="@color/colorSecondary"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/padding"
                        android:paddingBottom="@dimen/fab_padding"
                        android:transitionName="anim_et_main">

                        <ImageView
                            android:id="@+id/btnClearText"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/bg_nothing_rounded_ripple"
                            android:rotation="45"
                            android:src="@drawable/ic_baseline_add_circle_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/btnColor" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/fab_padding">

                            <EditText
                                android:id="@+id/etMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_nothing"
                                android:gravity="top"
                                android:hint="Type the text to translate."
                                android:imeOptions="actionGo"
                                android:inputType="textMultiLine"
                                android:minHeight="@dimen/_75sdp"
                                android:overScrollMode="never"
                                android:paddingHorizontal="@dimen/less_padding"
                                android:paddingBottom="@dimen/padding_10"
                                android:textColor="@color/white"
                                android:textColorHint="@color/gray_600"
                                android:textCursorDrawable="@drawable/cursor_color"
                                android:textSize="18sp"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="NestedWeights"
                                tools:layout_editor_absoluteX="-2dp" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:id="@+id/btnTranslate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:layout_marginEnd="@dimen/fab_padding"
                                android:background="@drawable/bg_main_less_rounded"
                                android:backgroundTint="@color/accent"
                                android:orientation="horizontal"
                                android:paddingHorizontal="@dimen/padding_10"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/padding_10"
                                    android:layout_marginEnd="@dimen/padding_10"
                                    android:contentDescription="@string/todo"
                                    android:gravity="center"
                                    android:paddingHorizontal="@dimen/less_padding"
                                    android:paddingVertical="@dimen/padding_10"
                                    android:text="@string/translate"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/nativeAdFrameLayoutInBetween"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_main_less_rounded"
                        android:backgroundTint="@color/colorSecondary"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/llTranslatedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_main_less_rounded"
                        android:backgroundTint="@color/colorSecondary"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/fab_padding"
                        android:paddingVertical="@dimen/padding"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/llText"
                        tools:layout_editor_absoluteX="15dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/textLngFrom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/less_padding"
                                    android:text="@string/english"
                                    android:textColor="@color/gray_600"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/padding"
                                    android:src="@drawable/ic_baseline_arrow_right_alt_24"
                                    app:tint="@color/gray_600" />

                                <TextView
                                    android:id="@+id/textLngTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/less_padding"
                                    android:text="@string/english"
                                    android:textColor="@color/gray_600"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/btnClearTranslation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="?android:attr/selectableItemBackground"
                                android:rotation="45"
                                android:src="@drawable/ic_baseline_add_circle_24"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/btnColor" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tvTextTranslated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/less_padding"
                            android:minLines="3"
                            android:paddingHorizontal="@dimen/less_padding"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights,RtlSymmetry" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/padding_10">

                            <ImageView
                                android:id="@+id/btnCopyTextTranslatedFrag"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:background="@drawable/ripple_effect_transparent_rounded"
                                android:backgroundTint="@color/accent"
                                android:contentDescription="@string/todo"
                                android:padding="@dimen/padding"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_copy"
                                app:tint="@color/btnColor" />

                            <ImageView
                                android:id="@+id/btnSpeakTranslation"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginStart="@dimen/padding_10"
                                android:background="@drawable/ripple_effect_transparent_rounded"
                                android:backgroundTint="@color/accent"
                                android:contentDescription="@string/todo"
                                android:padding="@dimen/less_padding"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_speak_ic"
                                app:tint="@color/btnColor" />

                            <ImageView
                                android:id="@+id/btnShareTranslation"
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginStart="@dimen/less_padding"
                                android:background="@drawable/ripple_effect_transparent_rounded"
                                android:backgroundTint="@color/accent"
                                android:contentDescription="@string/todo"
                                android:padding="@dimen/padding"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_baseline_share_24"
                                app:tint="@color/btnColor" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/nativeAdFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:layout_margin="@dimen/padding_10"
            android:background="@drawable/bg_native_ad"
            android:elevation="@dimen/padding_10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btnSpeakInput"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/fab_padding"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/accent"
        android:padding="16dp"
        android:src="@drawable/ic_voice"
        android:transitionName="anim_iv_voice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />

    <!--    <com.github.zagum.speechrecognitionview.RecognitionProgressView-->
    <!--        android:layout_width="@dimen/_60sdp"-->
    <!--        android:layout_height="@dimen/_60sdp"-->
    <!--        app:layout_constraintTop_toTopOf="@id/btnSpeakInput"-->
    <!--        android:elevation="@dimen/extra_padding"-->
    <!--        app:layout_constraintStart_toStartOf="@id/btnSpeakInput"-->
    <!--        app:layout_constraintBottom_toBottomOf="@id/btnSpeakInput"-->
    <!--        app:layout_constraintEnd_toEndOf="@id/btnSpeakInput" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
