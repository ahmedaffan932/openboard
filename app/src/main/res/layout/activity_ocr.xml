<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OCRActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="org.dslul.openboard.translator.pro.OCRActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/padding">


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/fab_padding"
            android:padding="@dimen/padding"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/m_padding"
            android:layout_marginTop="@dimen/extra_padding"
            android:layout_marginBottom="@dimen/fab_padding"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="@dimen/padding"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clAdsBottom"
        app:layout_constraintTop_toBottomOf="@id/llTopBar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageViewOcr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/black"
                android:orientation="vertical"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/llLanguageSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:background="@drawable/bg_rounded"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_padding"
                android:paddingHorizontal="@dimen/m_padding"
                android:transitionName="anim_ll_languages"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/llLanguageFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/m_padding"
                    android:background="@drawable/bg_nothing_rounded_ripple"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/flagFrom"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/us_flag"
                        app:shapeAppearanceOverlay="@style/roundedCorners" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m_padding"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLanguageFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="@string/english"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="NestedWeights" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="@drawable/bg_rounded"
                            android:backgroundTint="@color/black" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/fab_padding"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginVertical="@dimen/padding"
                        android:layout_weight="1"
                        android:background="@drawable/bg_nothing_rounded_ripple"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_arrow_down" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSwitchLanguages"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:background="@drawable/bg_nothing_rounded_ripple"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/padding"
                        app:srcCompat="@drawable/ic_switch_lang" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLanguageTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/m_padding"
                    android:background="@drawable/bg_nothing_rounded_ripple"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/fab_padding"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginVertical="@dimen/padding"
                        android:layout_weight="1"
                        android:background="@drawable/bg_nothing_rounded_ripple"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_arrow_down" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/m_padding"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLanguageTo"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="@string/textView"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="NestedWeights" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="@drawable/bg_rounded"
                            android:backgroundTint="@color/black" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/flagTo"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/by_flag"
                        app:shapeAppearanceOverlay="@style/roundedCorners" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#77373e41"
                android:elevation="@dimen/extra_padding"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:indeterminateTint="@color/accent"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/pbText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/detecting_text"
                    android:textColor="@color/black" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/bottomSheetResult"
            layout="@layout/bottom_sheet_ocr_translation_result" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAdsBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:visibility="gone"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-6814505709397727/3541499341"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:visibility="gone"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-6814505709397727/8015080919"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:visibility="gone"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-6814505709397727/3349927652"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayoutBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>