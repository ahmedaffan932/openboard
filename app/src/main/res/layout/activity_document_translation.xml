<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dslul.openboard.translator.pro.DocumentTranslationActivity">

    <LinearLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#f5f6fb"
        android:elevation="@dimen/padding_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/fab_padding"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/bg_nothing_rounded_ripple"
            android:contentDescription="@string/todo"
            android:paddingVertical="@dimen/less_padding"
            android:paddingEnd="@dimen/less_padding"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/gray_700"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Document Translate"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/bg_nothing_rounded_ripple"
            android:visibility="invisible"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            app:srcCompat="@drawable/ic_baseline_access_time_filled_24"
            app:tint="@color/gray_700" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLanguages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/fab_padding"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/llTopBar"
        tools:layout_editor_absoluteX="15dp">

        <LinearLayout
            android:id="@+id/llLngFromFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_10"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_rounded"
            android:gravity="center"
            android:orientation="horizontal"
            tools:targetApi="m">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/flagFromFrag"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/kr_flag"
                app:shapeAppearanceOverlay="@style/roundedCorners" />

            <TextView
                android:id="@+id/textViewLngFromFrag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/_7sdp"
                android:text="@string/english"
                android:textColor="@color/accent"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnSwitchLngs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_rounded"
            android:contentDescription="@string/todo"
            android:padding="@dimen/padding_10"
            android:paddingVertical="20dp"
            app:srcCompat="@drawable/ic_switch_lang"
            app:tint="@color/gray_700" />

        <LinearLayout
            android:id="@+id/llLngToFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_rounded"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLngToFrag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_10"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/_7sdp"
                android:text="@string/textview"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/flagToFrag"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/kr_flag"
                app:shapeAppearanceOverlay="@style/roundedCorners" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivDocuments"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_documents"
        android:layout_marginTop="@dimen/extra_padding"
        app:layout_constraintTop_toBottomOf="@id/llLanguages" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instant Translate Document into 50+ Languages"
        app:layout_constraintTop_toBottomOf="@id/ivDocuments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/extra_padding"
        android:layout_marginTop="@dimen/fab_padding"
        android:textColor="@color/accent"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/extra_padding" />


    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_menu_add"
        app:layout_constraintBottom_toTopOf="@id/tvTranslateFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_nothing_rounded_ripple"
        android:visibility="gone"
        android:elevation="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/less_padding"
        app:layout_constraintTop_toTopOf="@id/tvTranslateFile"
        app:tint="@color/accent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tvTranslateFile"
        android:background="@color/gray_400"/>

    <TextView
        android:id="@+id/tvTranslateFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate File"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/fab_padding"
        android:layout_marginHorizontal="@dimen/extra_padding"
        android:elevation="@dimen/padding"
        android:backgroundTint="@color/accent"
        android:background="@drawable/bg_accent_border_rounded"
        android:padding="@dimen/fab_padding"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>